# Sample environment for ha.sh
# Copy to .env and fill in the values.

# Home Assistant connection
# Example: http://homeassistant.local:8123
HA_HOST=http://homeassistant.local:8123
# Long-lived access token from Home Assistant
HA_API_TOKEN=

# Home Assistant sensor entity matching
# Match sensor entity_ids containing this string
HA_SENSOR_MATCH=vevor
# Remove this prefix from matched entity_id names
HA_SENSOR_PREFIX=sensor.vevor_7in1_0_8993_
# Space-separated mapping of script variables to HA keys (var_name:ha_key)
# Supported var_names: battery temperature humidity wind_speed wind_max_speed wind_direction rain_total uv_index outside_luminance
HA_SENSOR_MAP="battery:battery temperature:temperature humidity:humidity wind_speed:wind_speed wind_max_speed:wind_max_speed wind_direction:wind_direction rain_total:rain_total uv_index:uv_index outside_luminance:outside_luminance"

# Loop interval in seconds for ha.sh (0 = run once and exit)
INTERVAL_SECONDS=300

# APRS-IS settings used by aprs-weather-submit
APRS_CALLSIGN=
APRS_LATITUDE=
APRS_LONGITUDE=
# Optional overrides (defaults shown)
APRS_SERVER=rotate.aprs2.net
APRS_PORT=14580
APRS_USERNAME=
APRS_PASSWORD=

# Optional: altitude in meters (converted to feet for APRS)
APRS_ALTITUDE=

# Optional: lux-to-W/m^2 efficacy (used when outside_luminance is present)
# Default is 110 if unset
LUX_EFFICACY=110
